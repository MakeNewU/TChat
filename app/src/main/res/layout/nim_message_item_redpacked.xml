<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_redpacked_detail_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|top"
    android:background="@drawable/nim_message_item_round_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/message_item_redpacked_icon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/message_item_redpacked_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/message_item_redpacked_icon_image"
        android:autoLink="none"
        android:maxLines="2"
        android:maxWidth="160dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/message_item_redpacked_tip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@id/message_item_redpacked_name_label"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/message_item_redpacked_icon_image"
        android:autoLink="none"
        android:maxLines="1"
        android:maxWidth="160dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/message_item_redpacked_from_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/message_item_redpacked_icon_image"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:autoLink="none"
        android:maxLines="1"
        android:maxWidth="160dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp" />

</RelativeLayout>